<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - cambiado a tema claro fijo -->
    <style name="Theme.ControlAsistencia" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color con pasteles suaves -->
        <item name="colorPrimary">@color/pastel_blue</item>
        <item name="colorPrimaryVariant">@color/pastel_blue_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/pastel_pink</item>
        <item name="colorSecondaryVariant">@color/pastel_lavender</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/soft_gray</item>
        <item name="colorOnSurface">@color/black</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Hacer que el contenido de la status bar sea oscuro -->
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>