<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F8FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GESTIONAR ASISTENCIA"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Estado WiFi -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#E8F5E8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estado de Conectividad"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/txtWifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WiFi: Verificando..."
                    android:textSize="14sp"
                    android:textColor="#4CAF50" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Selección de Clase -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFF8E1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clase Activa"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/spinnerClase"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/spinner_background"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnMostrarQR"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Mostrar Código QR"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FF9800"
                    android:textStyle="bold"
                    app:cornerRadius="8dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Código QR -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#F3E5F5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Código QR de Asistencia"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="16dp" />

                <ImageView
                    android:id="@+id/imgQR"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:background="#FFFFFF"
                    android:scaleType="centerInside"
                    android:visibility="gone"
                    android:contentDescription="Código QR para asistencia" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Registro Manual -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#E3F2FD">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registro Manual de Asistencia"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estudiante"
                    android:textSize="14sp"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="4dp" />

                <Spinner
                    android:id="@+id/spinnerEstudiante"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/spinner_background"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btnRegistrarAsistencia"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Registrar Asistencia"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#4CAF50"
                    android:textStyle="bold"
                    app:cornerRadius="8dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Botón Listar -->
        <Button
            android:id="@+id/btnListarAsistencias"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="VER ASISTENCIAS REGISTRADAS"
            android:textColor="#FFFFFF"
            android:backgroundTint="#9C27B0"
            android:textStyle="bold"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</ScrollView>